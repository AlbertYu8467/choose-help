/* pages/addComment/addComment.wxss */
.row {
  display: flex;
  justify-content: space-between;
}
.col {
  width: 25%;
  text-align: center;
}
.th {
  font-weight: 600;
}
.td,
.th {
  padding: 5px 0;
}
.add-control{
  padding: 10rpx 0;
  margin:5rpx 10rpx;
  border: 1px solid #9491EC;
}
.add-control .row {
  justify-content: center;
}
input {
  background: #fff;
  height: 60rpx;
  padding: 5rpx 20rpx;
  border-radius: 8rpx; 
  color: #9491EC;
}
.add {
  margin-top: 20rpx;
}
.add-button,
.complete {
  height: 60rpx;
  font-size:35rpx;
  line-height: 60rpx;
  background: #9491EC;
  color: #fff; 
  margin: 0 20rpx;
}